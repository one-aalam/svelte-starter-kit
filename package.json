{
	"name": "svelte-starter-kit",
	"version": "0.0.1",
	"scripts": {
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"type-check": "tsc --project tsconfig.json --pretty --noEmit",
		"lint": "prettier --check . && eslint .",
		"esfix": "eslint . --fix",
		"format": "prettier --write .",
		"format-check": "prettier -- --list-different",
		"validate": "npm-run-all --parallel type-check lint build",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@supabase/supabase-js": "^1.31.1",
		"@sveltejs/adapter-cloudflare": "^1.0.0-next.15",
		"@sveltejs/adapter-node": "^1.0.0-next.71",
		"@sveltejs/adapter-static": "^1.0.0-next.29",
		"@sveltejs/adapter-netlify": "^1.0.0-next.50",
		"@sveltejs/adapter-vercel": "^1.0.0-next.46",
		"@sveltejs/adapter-auto": "^0.0.1",
		"@sveltejs/kit": "^1.0.0-next.295",
		"@tailwindcss/aspect-ratio": "0.4.0",
		"@tailwindcss/forms": "^0.5.0",
		"@tailwindcss/line-clamp": "0.3.1",
		"@tailwindcss/typography": "0.5.2",
		"@types/cookie": "^0.4.1",
		"@typescript-eslint/eslint-plugin": "^5.14.0",
		"@typescript-eslint/parser": "^5.14.0",
		"autoprefixer": "^10.4.2",
		"cookie": "^0.4.2",
		"cssnano": "^5.1.2",
		"eslint": "^8.10.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^3.4.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.5",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.8",
		"postcss-load-config": "^3.1.3",
		"prettier": "~2.5.1",
		"prettier-plugin-svelte": "^2.6.0",
		"svelte": "^3.46.4",
		"svelte-feather-icons": "^3.5.1",
		"svelte-preprocess": "^4.10.4",
		"svelte-seo": "^1.4.0",
		"tailwindcss": "^3.0.23",
		"tslib": "^2.3.1",
		"typescript": "^4.6.2",
		"vite": "^2.8.6"
	},
	"type": "module",
	"engines": {
		"node": ">= 12.17.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "CI=1 npm-run-all --parallel type-check && lint-staged"
		}
	},
	"lint-staged": {
		"*.+(js|ts|svelte)": [
			"yarn run lint"
		],
		"*.+(js|json|ts|svelte)": [
			"yarn run format"
		]
	}
}
